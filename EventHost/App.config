<?xml version="1.0" encoding="utf-8" ?>
<configuration>
    <system.serviceModel>
    <services>

      <!--********************************** Calc Service ********************************** -->
      <service name="JCDecauxLibrary.JCDecauxOperations" behaviorConfiguration="VelibServiceBehavior">
        <host>
          <baseAddresses>
            <add baseAddress="http://localhost:8081/VelibService"/>
          </baseAddresses>
        </host>

        <endpoint address="" binding="wsDualHttpBinding" contract="JCDecauxLibrary.IJCDecauxOperations"/>
        <endpoint address="mex" binding="mexHttpBinding" contract="IMetadataExchange"/>
      </service>
    </services>
        
    <!-- ********************************** behaviors ********************************** -->
    <behaviors>
      <serviceBehaviors>
        <!-- CalcService Behavior -->
        <behavior name="VelibServiceBehavior">
          <serviceMetadata httpGetEnabled="true"/>
          <serviceDebug includeExceptionDetailInFaults="true "/>
        </behavior>
      </serviceBehaviors>
    </behaviors>
 
  </system.serviceModel>
</configuration>